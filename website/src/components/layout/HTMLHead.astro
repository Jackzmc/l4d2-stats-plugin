---
import Bulma from "bulma/css/bulma.min.css?url";
import '@/styles/main.css'
import { Tooltips } from 'astro-tooltips'
import { SEO } from "astro-seo";

export interface Props {
    pageTitle?: string;
    description?: string;

    siteTitle: string;

    noIndex?: boolean,
    noFollow?: boolean,

    openGraph?: {
        title: string,
        type: string,
        image: string
    }
}
const { pageTitle, description = "View all in-game statistics for Left 4 Dead 2, with a leaderboard, game overviews and user statistics", siteTitle, noIndex, noFollow, openGraph } = Astro.props;

const og = openGraph ? { basic: openGraph } : undefined
const titleTemplate = `%s | ${siteTitle}`
---

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href={Bulma}  />
    <link rel="sitemap" href="/sitemap.xml">
    <SEO
        title={pageTitle}
        titleTemplate={titleTemplate}
        titleDefault={siteTitle}
        description={description}
        noindex={noIndex}
        nofollow={noFollow}
        openGraph={og}
    />
    <Tooltips interactive={false} placement="top" delay={[0, 0]} animation={false} />
</head>
