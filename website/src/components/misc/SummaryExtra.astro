---
import CountUp from '../CountUp.astro'

interface Props {
    values: Record<string, number>
}
const { values } = Astro.props
---

<div>
    <nav class="level">
        <div class="level-item has-text-centered">
            <div>
            <p class="heading">Boomers Killed</p>
            <p class="title"><CountUp number={values.boomer_kills} /></p>
            </div>
        </div>
        <div class="level-item has-text-centered">
            <div>
            <p class="heading">Jockeys Killed</p>
            <p class="title"><CountUp number={values.jockey_kills} /></p>
            </div>
        </div>
        <div class="level-item has-text-centered">
            <div>
            <p class="heading">Smokers Killed</p>
            <p class="title"><CountUp number={values.smoker_kills} /></p>
            </div>
        </div>
        <div class="level-item has-text-centered">
            <div>
            <p class="heading">Spitters Killed</p>
            <p class="title"><CountUp number={values.spitter_kills} /></p>
            </div>
        </div>
        <div class="level-item has-text-centered">
            <div>
            <p class="heading">Hunters Killed</p>
            <p class="title"><CountUp number={values.hunter_kills} /></p>
            </div>
        </div>
        <div class="level-item has-text-centered">
            <div>
            <p class="heading">Chargers Killed</p>
            <p class="title"><CountUp number={values.charger_kills} /></p>
            </div>
        </div>
    </nav>
    <nav class="level">
        <div class="level-item has-text-centered">
            <div>
            <p class="heading">Pills Used</p>
            <p class="title"><CountUp number={values.PillsUsed} /></p>
            </div>
        </div>
        <div class="level-item has-text-centered">
            <div>
            <p class="heading">Adrenalines Used</p>
            <p class="title"><CountUp number={values.AdrenalinesUsed} /></p>
            </div>
        </div>
        <div class="level-item has-text-centered">
            <div>
            <p class="heading">Kits Used (Self)</p>
            <p class="title"><CountUp number={values.MedkitsUsed - values.FirstAidShared} /></p>
            </div>
        </div>
        <div class="level-item has-text-centered">
            <div>
            <p class="heading">Kits Used (Shared)</p>
            <p class="title"><CountUp number={values.FirstAidShared} /></p>
            </div>
        </div>
    </nav>
    <nav class="level">
        <div class="level-item has-text-centered">
            <div>
            <p class="heading">Incaps</p>
            <p class="title"><CountUp number={values.Incaps} /></p>
            </div>
        </div>
        <div class="level-item has-text-centered">
            <div>
            <p class="heading">Deaths</p>
            <p class="title"><CountUp number={values.Deaths} /></p>
            </div>
        </div>
        <div class="level-item has-text-centered">
            <div>
            <p class="heading">Revives (Others)</p>
            <p class="title"><CountUp number={values.ReviveOtherCount} /></p>
            </div>
        </div>
    </nav>
</div>